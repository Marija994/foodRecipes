<%- include ../includes/head.ejs %>
<%- include ../includes/navigation.ejs %>

</header>
<div class="container mt-5">
    <% if(errorMessage) { %>
    <div class="alert alert-danger text-center"><%=errorMessage%></div>
    <% } %>
    <h1 style="text-align: center;">Sign Up</h1>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/user/signup" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="firstName" placeholder="First Name" value="<%=oldInput.firstName%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lastName" placeholder="Last Name" value="<%=oldInput.lastName%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="email" value="<%=oldInput.email%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Register</button>
                </div>
            </form>
        </div>

    </div>
</div>




<%- include ../includes/footer.ejs %>