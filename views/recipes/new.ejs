</header>
<div class="container">
    <h1 style="text-align: center;">Create a New Recipe</h1>
    <div class="row">
        <div style="width:70%; margin: 25px auto;">
            <form action="/auth/recipe" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>

                <div class="row">
                    <div class="form-group col">
                        <input class="form-control" type="text" name="ingredients" placeholder="ingredients">
                    </div>
                    <div class="form-group col">
                        <input class="form-control" type="number" name="measure" placeholder="measure" min="0.1"
                            step="0.1">
                    </div>
                    <div class="form-group col">
                        <input class="btn btn-danger" type="button" name="remove" value="remove">
                        <input class="btn btn-success ml-4" type="button" name="new" value="+">
                    </div>
                </div>


                <div class="form-group">
                    <select name="category" id="" class="form-control">
                        <option>Select Category</option>
                        <%category.forEach(category => { %>
                        <option value="<%=category._id%>"><%=category.name%></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="video" placeholder="video">
                </div>
                <div class="form-group">
                    <textarea name="description" id="" class="form-control">Description</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>

    </div>
</div>




