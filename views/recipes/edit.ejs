<%- include ../includes/head.ejs %>
<%- include ../includes/navigation.ejs %>

</header>
<div class="container">
    <h1 style="text-align: center;">Edit <%=recipe.name%></h1>
    <div class="row">
        <div style="width:70%; margin: 25px auto;">
            <form action="/auth/recipe/<%=recipe._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=recipe.name%>">
                </div>

                <div class="row">
                    <div class="form-group col">
                        <input class="form-control" type="text" name="ingredients" value="<%=recipe.ingredients%>">
                    </div>
                    <div class="form-group col">
                        <input class="form-control" type="number" name="measure" value="<%=recipe.measure%>" min="0.1"
                            step="0.1">
                    </div>
                    <div class="form-group col">
                        <input class="btn btn-danger" type="button" name="remove" value="remove">
                        <input class="btn btn-success ml-4" type="button" name="new" value="+">
                    </div>
                </div>


                <div class="form-group">
                    <select name="category" id="" class="form-control">
                        <option>Select Category</option>
                        <%category.forEach(category => { %>
                        <option value="<%=category._id%>"><%=category.name%></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%=recipe.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="video" value="<%=recipe.video%>">
                </div>
                <div class="form-group">
                    <textarea name="description" id="" class="form-control"><%=recipe.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>

    </div>
</div>



<%- include ../includes/footer.ejs %>